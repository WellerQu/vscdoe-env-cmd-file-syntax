{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "env",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comment": {
			"patterns": [{
				"name": "comment.line",
				"match": "^#.*"
			}]
		},
		"variables": {
			"patterns": [
				{
					"name": "variables.key",
					"match": "(REACT_APP_)?([a-zA-Z0-9_]+)(\\=)",
					"captures": {
						"1": { "name": "entity.name.tag" },
						"2": { "name": "variable.function" },
						"3": { "name": "punctuation.separator" }
					}
				},
				{
					"name": "variables.refer.double",
					"match": "(\\$)(\\{)(.+)(\\})",
					"captures": {
						"1": { "name": "keyword.control" },
						"2": { "name": "keyword.control" },
						"3": { "name": "entity.name.type.anchor" },
						"4": { "name": "keyword.control" }
					}	
				},
				{
					"name": "variables.refer.single",
					"match": "(\\$)(.+)",
					"captures": {
						"1": { "name": "keyword.control" },
						"2": { "name": "entity.name.type.anchor" }
					}
				},
				{
					"name": "variables.value",
					"match": "(.*)$",
					"captures": {
						"1": { "name": "string.unquoted.plain" }
					}
				}
			]
		}
	},
	"scopeName": ".env"
}