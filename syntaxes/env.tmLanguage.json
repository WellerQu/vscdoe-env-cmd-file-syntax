{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "env",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#key-value"
		}
	],
	"repository": {
		"comment": {
			"patterns": [{
				"name": "comment.line",
				"match": "^#.*"
			}]
		},
		"key-value": {
			"patterns": [{
				"name": "entity.name",
				"match": "([a-zA-Z0-9_]+)(\\=)(\\d*)?(true|false)?(.*)",
				"captures": {
					"1": { "name": "entity.name.tag" },
					"2": { "name": "punctuation.separator" },
					"3": { "name": "constant" },
					"4": { "name": "constant" },
					"5": { "name": "string.unquoted.plain" }
				}
			}]
		}
	},
	"scopeName": ".env"
}